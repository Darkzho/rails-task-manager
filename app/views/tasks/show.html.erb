<div class="main-wrapper">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>

  <div class="task-info-container">
    <% if @task.completed %>
      <i class="fa fa-check-square-o"> This task is completed</i>
      <% else %>
      <i class="fa fa-square-o"></i> This task is not completed yet
    <% end %>
  </div>
  <br>
  <div class="btn-wrapper">
    <%= link_to "Go back", tasks_path, class:"btn btn-return" %><br>
    <%= link_to "Edit task", edit_task_path, class:"btn btn-edit" %>
  </div>
</div>